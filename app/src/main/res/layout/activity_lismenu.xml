<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lismenu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=" Welcome to E-learning"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Your onilne Classroom"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="145dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20sp"
                android:layout_weight="1"
                android:backgroundTint="#FFEB3B"
                android:text="Button" />

            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20sp"
                android:backgroundTint="#FFEB3B"
                android:text="Button" />

            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20sp"
                android:backgroundTint="#FFEB3B"
                android:text="Button" />

            <Button
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20sp"
                android:layout_weight="1"
                android:text="Button" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Your  Level Class"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="145dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Chapter3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:backgroundTint="#FFC107"
                android:text="Chapter3" />

            <Button
                android:id="@+id/Chapter4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:backgroundTint="#FFC107"
                android:text="Chapter4" />

            <Button
                android:id="@+id/Chapter5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:backgroundTint="#FFC107"
                android:text="Chapter5" />

            <Button
                android:id="@+id/Chapter6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:backgroundTint="#FF9800"
                android:text="Chapter6" />

            <Button
                android:id="@+id/Chapter7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:backgroundTint="#FF9800"
                android:text="Chapter7" />

            <Button
                android:id="@+id/Chapter8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:backgroundTint="#FF9800"
                android:text="Chapter8" />

            <Button
                android:id="@+id/Chapter9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:backgroundTint="#FF9800"
                android:text="Chapter9" />

            <Button
                android:id="@+id/Chapter10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:backgroundTint="#FF9800"
                android:text="Chapter10" />

            <Button
                android:id="@+id/Chapter11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:backgroundTint="#FF9800"
                android:text="Chapter11" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your  Quiz"
        android:textAlignment="textStart"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button15"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:text="Quiz 1" />

            <Button
                android:id="@+id/button14"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:text="Quiz 2" />

            <Button
                android:id="@+id/button13"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:text="Quiz 3" />

            <Button
                android:id="@+id/button12"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:text="Quiz 4" />

            <Button
                android:id="@+id/button11"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:text="Quiz 5" />

            <Button
                android:id="@+id/button10"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:text="Quiz 6" />

            <Button
                android:id="@+id/button9"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:text="Quiz 7" />

            <Button
                android:id="@+id/button8"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:text="Quiz 8" />

            <Button
                android:id="@+id/button7"
                android:layout_width="350dp"
